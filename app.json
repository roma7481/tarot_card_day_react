{
  "expo": {
    "name": "Tarot Card of the Day",
    "slug": "tarot_card_day",
    "version": "8.2.0",
    "orientation": "portrait",
    "icon": "./assets/playstore-icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/card_back_splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tarotcardday.app"
    },
    "android": {
      "versionCode": 82,
      "adaptiveIcon": {
        "foregroundImage": "./assets/playstore-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "softwareKeyboardLayoutMode": "resize",
      "predictiveBackGestureEnabled": false,
      "package": "tarocard.crazybee.com.tarotcardoftheday",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "com.android.vending.BILLING"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "@react-native-community/datetimepicker",
      "expo-notifications",
      [
        "react-native-android-widget",
        {
          "widgets": [
            {
              "name": "DailyTarot",
              "label": "Daily Tarot",
              "minWidth": "160dp",
              "minHeight": "120dp",
              "description": "Show your Card of the Day",
              "previewImage": "./assets/widget-preview.png"
            }
          ]
        }
      ],
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-1763151471947181~1407697358",
          "iosAppId": "ca-app-pub-1763151471947181~1394638227"
        }
      ],
      [
        "./plugins/withAppLovin",
        {
          "androidSdkKey": "qnL2sJHf5VT2RFA26vgN2heXM-Lpfdo4FPKD_09zl9TnHlPVSmGcSRPIQKwcsZwKIWCJZ62BtOONX_7JNmPDX_",
          "iosSdkKey": "qnL2sJHf5VT2RFA26vgN2heXM-Lpfdo4FPKD_09zl9TnHlPVSmGcSRPIQKwcsZwKIWCJZ62BtOONX_7JNmPDX_"
        }
      ],
      "./plugins/withFirebaseFixed",
      "./plugins/withAndroidSigning",
      "react-native-iap",
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "d6f7e04d-a0c8-43b1-914f-dcb50f930e11"
      }
    }
  }
}